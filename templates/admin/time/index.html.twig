                                <th>11</th>
                                <th>12</th>
                                <th>13</th>
                                <th>14</th>
                                <th>15</th>
                                <th>16</th>
                                <th>17</th>
                                <th>18</th>
                                <th>19</th>
                                <th>20</th>
                                <th>21</th>
                                <th>22</th>
                                <th>23</th>
                                <th>24</th>
                                <th>25</th>
                                <th>26</th>
                                <th>27</th>
                                <th>28</th>
                                <th>29</th>
                                <th>30</th>
                                <th>31</th>
                                <th>TC</th>
                                </thead>
                                <tbody>
                                {% for employee in employees  %}


                                    <tr>
                                        <td><a href="{{ path('app_admin_date_log_employee_index', {id:employee.id}) }}">{{ employee.employeeCode }}</a></td>
                                        <td>{{ employee.name }}</td>
                                        <td>{{ employee.department }}</td>
                                        {% set sum = 0 %}
                                        {% for i in range(1,31) %}
                                        <td>
                                            {% if calendars[employee.id][i].id is defined %}
                                              <a  href="{{ path('app_admin_date_log_edit', {id:calendars[employee.id][i].id}) }}">  {{ (calendars[employee.id][i].value/60)|round(0, 'floor') }}h {{ (calendars[employee.id][i].value%60)|round(0,) }}p</a>
                                                {% set sum = sum + calendars[employee.id][i].value %}
                                            {% endif %}


                                        </td>

                                        {% endfor %}
                                        <td> {{ (sum/60)|round(0, 'floor') }}h {{ (sum%60)|round(0,) }}p</td>
                                    </tr>
                                </tbody>

                                {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

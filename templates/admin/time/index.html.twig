{% extends "admin/bars.html.twig" %}

{% block contenpage %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h5> Listing </h5>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Time track</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a href="{{ path('app_admin_time_track_create') }}" class="btn btn-success">Tạo dữ liệu</a>
                            </li>
                            <li><a href="{{ path('app_admin_date_track_bulk') }}" class="btn btn-success">Tính công</a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">

                            <table id="example" class="display table table-striped table-bordered dataminetables table-responsive"  >
                                <thead>
                                <th>Ma Nhan Vien</th>
                                <th>Ten</th>
                                <th>Phong</th>
                                <th>1</th>
                                <th>2</th>
                                <th>3</th>
                                <th>4</th>
                                <th>5</th>
                                <th>6</th>
                                <th>7</th>
                                <th>8</th>
